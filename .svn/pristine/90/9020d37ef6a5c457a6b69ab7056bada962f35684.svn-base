/* pages/pro_manage/pro_list/list.wxss */
page{
  width: 100%;
  height: 100%;
}
.fixed-add{
  position: fixed;
  top:80%;
  right:15%;
  width: 100rpx;
  height: 100rpx;
  z-index: 999;
}
.pro{
  height: 100%;
  position: relative;
}
.pro-search{
  position: absolute;
  width: 100%;
}
.pro-container{
  height: 100%;
  box-sizing: border-box;
  padding-top:112rpx;
}
.cate-first{
  float: left;
  width: 170rpx;
  height: 100%;
  background-color: #f0f0f0;
}
.cate-first__container{
  width: 100% !important;
 
}
.cate-item{
  padding: 0!important;
  height: 100rpx;
  line-height: 100rpx !important;
  text-align: center;
  color: #666 !important;
  border-left: 0 !important;
  font-size: 30rpx;
  box-sizing: border-box;
}
.cate-active{
  background: #fff;
  border-left: 8rpx solid #fe2200;
}
.cate-second{
  margin-left:170rpx;
  height: 100%;
  position: relative;
}
.second-list{
  position: absolute;
  width: 100%;
  z-index: 100;
}
.tabs-drop{
  position:absolute;
  width:100%;
  top:104rpx;
  background:#fff;
  box-shadow: 0 12rpx 12rpx rgba(0,0,0, .08);
  z-index: 100;
}
.tabs-container{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:2rpx solid #f0f0f0;
}
.tabs-list{
  flex: 1;
  --tabs-height:98rpx;
  --tabs-line-height:98rpx;
  --gray-darker:#333;
  --red:#fff;
  --text-color:#ee0a24;
}

.arrow-down{
  background-color: #fff;
  padding:0 24rpx;
  width: 32rpx;
  height: 18rpx;
}
.pro-detail{
  height: 100%;
  box-sizing: border-box;
}
.detail-container{
  padding-top:100rpx;
  height: 100%;
  box-sizing: inherit;
  position: relative;
}

.card-container{
  margin: 0 24rpx;
  min-height: 100%;
  position: relative;
}
.card-style{
  box-shadow: 0 0 24rpx rgba(0,0,0, .08);
  border-radius: 10px;
  padding: 24rpx;
  margin-top: 24rpx;
}
.state-container{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
}

.img-size{
  width: 160rpx;
  height: 160rpx;
}
.selling-price{
  font-size: 32rpx;
  color: #fe2200;
  font-weight: bold;
}
.selling-state{
  font-size: 28rpx;
  color: #333;
}
.btn-container{
  text-align: right;
  padding: 48rpx 0 0;
}
.pro-btn{
  display: inline-block;
  /* width: 152rpx; */
  height: 30px;
  line-height: 30px;
  border: 1px solid #ccc;
  color: #333;
  font-size: 28rpx;
  border-radius: 15px;
  background-color: #fff;
}
.pro-btn+.pro-btn{
  margin-left: 20rpx;
}
.btn-del{
  color: #fe2200;
  border: 1px solid #fe2200;
}

.van-search__content{
  border: 2rpx solid #ccc;
}
.van-search{
  padding:20rpx !important;
}