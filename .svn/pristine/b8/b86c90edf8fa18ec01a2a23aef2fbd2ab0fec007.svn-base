// pages/mall/order-manager/order-manager.js
var util = require('../../../utils/util.js');
const app = getApp()
Page({

  /**
   * 页面的初始数据
   */
  data: {
    active: 1,
    type: '-1',
    orderList: [],
    orderId:1,
    tabList: [
      {
        id: -1,
        title: '全部'
      },{
        id: 0,
        title: '待付款'
      },
      {
        id: 1,
        title: '待发货'
      }, {
        id: 6,
        title: '待收货'
      }, {
        id: 2,
        title: '已完成'
      }, {
        id: 3,
        title: '退款/售后'
      },
    ]
  },
  changeTab(e) {
    this.setData({
      type: e.detail.type
    })
    this.getOrderList()
  },
  goDetail(e) {
    // var item = e.currentTarget.dataset.item
    // var deliver = e.currentTarget.dataset.deliver
    var orderId = e.currentTarget.dataset.id
    wx.navigateTo({
      url: '../order-detail/order-detail?id=' + orderId,
    })
  },
  getOrderList() {
    var url = app.globalData.baseUrl + 'apiMall/order/inst/list'
    var data = {
      status:this.data.type
    }
    util.getRequestListData(url, data, false, this.listRes)
  },
  goDel(e) {
    var id = e.currentTarget.dataset.id
    this.setData({
      orderId:id
    })
    var that=this
    wx.showModal({
      title: '提示',
      content: '确定删除该订单？',
      success:function(res){
        if(res.confirm){
          var url = app.globalData.baseUrl + 'apiMall/order/inst/delete'
          var data = {
            orderId: id
          }
          util.postRequestList(url, data, false, that.delRes)
        }
        
      }
    })
  },
  delRes(res){
    var list = this.data.orderList
    for(var i in list){
      if(this.data.orderId==list[i].orderId){
        list.splice(i,1)
      }
    }
    this.setData({
      orderList:list
    })
  },
  listRes(res) {
    var list = res.data.content
    for (var item of list) {
      item.crtTime = util.formatTime(item.crtTime)
      item.picList = JSON.parse(item.picList)
      item.totalMoney = util.getMoney(item.totalMoney)
    }
    this.setData({
      orderList: list
    })
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function(options) {
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function() {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function() {
    this.getOrderList()
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function() {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function() {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function() {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function() {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function() {

  }
})