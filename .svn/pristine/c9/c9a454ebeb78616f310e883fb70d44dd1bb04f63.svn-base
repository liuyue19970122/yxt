/* pages/oa/add-leave/add.wxss */

.form-item {
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #333;
  margin: 0 24rpx;
}

.form-item-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.form--input{
  display: flex;
  width:70%;
  justify-content: space-between;
}
.name{
  width:80%;
}
.name-item{
  position:relative;
  display: inline-block;
  padding:0 10rpx;
  background: #f0f0f0;
  margin-right:20rpx;
  border-radius: 10rpx;
  font-size:28rpx;
}
.label {
  font-weight: 500;
  width: 30%;
}
.reason-content {
  height: 200rpx;
  width: 702rpx;
  margin-top:20rpx;
}

.del-icon{
  width:30rpx;
  height:30rpx;
  position: absolute;
  top:-15rpx;
  right:-15rpx;
  background: #fff;
  border-radius: 50%;
}