/* pages/pro_manage/pro_list/list.wxss */
page{
  width: 100%;
  height: 100%;
}
.fixed-add{
  position: fixed;
  right: 20rpx;
  bottom: 80rpx;
  width: 100rpx;
  height: 100rpx;
  z-index: 999;
}
.pro{
  height: 100%;
  position: relative;
}
.pro-search{
  position: absolute;
  width: 100%;
}
.pro-container{
  height: 100%;
  box-sizing: border-box;
  padding-top:112rpx;
}
.cate-first{
  float: left;
  width: 160rpx;
  height: 100%;
  background-color: #f0f0f0;
}
.cate-first__container{
  width: 100% !important;
 
}
.cate-item{
  padding: 0!important;
  height: 100rpx;
  line-height: 100rpx !important;
  text-align: center;
  color: #666 !important;
  font-size: 30rpx;
  box-sizing: border-box;
}
.cate-active{
  background: #fff;
  border-left: 8rpx solid #fe2200;
}
.cate-second{
  margin-left:184rpx;
  height: 100%;
  position: relative;
}
.second-list{
  
  position: absolute;
  width: 100%;
 
}
.tabs-container{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}
.tabs-list{
  flex: 1;
  --tabs-height:100rpx;
  --tabs-line-height:100rpx;
  --gray-darker:#333;
  --red:#fff;
  --text-color:#ee0a24;
}

.arrow-down{
  background-color: #fff;
  padding:0 24rpx;
  width: 32rpx;
  height: 18rpx;
}
.pro-detail{
  height: 100%;
  box-sizing: border-box;
}
.detail-container{
  padding-top:100rpx;
  height: 100%;
  box-sizing: inherit;
}

.card{
  margin: 24rpx 24rpx 24rpx 0;
  box-shadow: 0 12rpx 24rpx rgba(0,0,0, .08);
  border-radius: 10px;
}
.card+.card{
 margin: 48rpx 24rpx 24rpx 0;
}
.card-item,.state-container{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
}
.card-item{
  padding:40rpx 24rpx;
}

.card-item .card-img{
  width: 160rpx;
  height: 160rpx;
}
.card-item .card-content{
  margin-left: 20rpx;
  flex: 1;
}
.card-content__title{
  font-size: 28rpx;
  overflow:hidden;
  text-overflow:ellipsis; 
  text-overflow: -o-ellipsis-lastline;
  display:-webkit-box;
  -webkit-line-clamp:2;
  line-clamp: 2;
  -webkit-box-orient:vertical;
}
.original-price{
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}
.state-container{
  
}
.selling-price{
  font-size: 32rpx;
  color: #fe2200;
  font-weight: bold;
}
.selling-state{
  font-size: 28rpx;
  color: #333;
}
.btn-container{
  text-align: right;
  padding: 20rpx 24rpx 40rpx;
}
.pro-btn{
  display: inline-block;
  width: 152rpx;
  height: 30px;
  line-height: 30px;
  border: 1px solid #ccc;
  color: #333;
  font-size: 28rpx;
  border-radius: 15px;
  background-color: #fff;
}
.pro-btn+.pro-btn{
  margin-left: 20rpx;
}

.van-search__content{
  border: 2rpx solid #ccc;
}
.van-search{
  padding:20rpx !important;
}