/* pages/mall/pro-details/detail.wxss */
.swiper{
  height: 500rpx;
}
.swiper-img{
  height: 100%;
  width: 100%;
}
.pro-container{
  margin:0 24rpx; 
}
.pro-name{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  margin-top: 44rpx;
}
.font-title{
  font-size: 40rpx;
  color: #333;
  flex: 1;
  overflow:hidden;
  text-overflow:ellipsis; 
  text-overflow: -o-ellipsis-lastline;
  display:-webkit-box;
  -webkit-line-clamp:2;
  line-clamp: 2;
  -webkit-box-orient:vertical;
}
.pro-name>text{
  flex: 1;
  padding-right: 24rpx;
}
.share-img{
  width: 40rpx;
  height: 40rpx;
}
.share-img+.share-img{
  margin-left: 24rpx;
}
.pro-price{
  padding-bottom: 44rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.pro-price>text:first-child{
  font-size: 40rpx;
  display: inline-block;
  margin-right: 24rpx;
  color: #fe2200;
  font-weight: bold;
}
.pro-price>text:last-child{
  display: inline-block;
  font-size: 32rpx;
  color: #999;
  text-decoration: line-through;
}
.pro-desc{
  margin: 44rpx 0;
}
.pro-blank{
  height: 44rpx;
  background-color: #f0f0f0;
}
.pro-title{
  line-height: 120rpx;
  text-align: center;
}
