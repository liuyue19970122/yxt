/* pages/mall/handle-order/order-add/add.wxss */
.form-item{
  margin: 0 24rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  border-bottom:1px solid #f0f0f0;
}

.label-block{
  display: block;
  line-height: 100rpx;
  font-size: 36rpx;
}
.form-item__inline{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}
.form-item__label{
  padding-right: 24rpx;
}
.form-item__content{
  flex: 1;
  text-align: right;
}
.picker{
  padding-right: 24rpx;
  color: #999;
}
.add-supplier{
  width: 50rpx;
  height: 50rpx;
  margin-left: 24rpx;
}
.add-spec{
  width: 60rpx;
  height: 60rpx;
}

.card-container{
  padding: 0 24rpx;
}
.card{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0 30rpx;
  color: #333;
  border-bottom:2rpx solid #f0f0f0;
}
.card-info{
  flex: 1;
  margin-right: 40rpx;
}
.info-name{
  font-size: 32rpx;
  margin-bottom: 24rpx;
}
.info-other{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}
.fixed-bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
}
.btn{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: inline-block;
  border-radius: 0;
  color: #fff;
}
.btn-save{
  background: #07c160;
}
.btn-submit{
  background: #fe2200;
}