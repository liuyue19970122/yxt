/* pages/pro_manage/pro_list/list.wxss */
page{
  width: 100%;
  height: 100vh;
  overflow: hidden
}
.pro{
  height: 100%;
  position: relative;
}
.pro-search{
  position: absolute;
  width: 100%;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  background-color: #fe2200;
}
.location{
  display: flex;
  align-items: center;
  width: 170rpx;
  padding-left:20rpx;
}
.location>image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
}
.location>text{
  color: #fff;
  font-size: 36rpx;
}
.location>button{
  color:#fff;
  border-radius:0;
  padding:0;
  margin:0;
  background:#fe2200;
  font-size: 28rpx;
}
.location>text,location>button{
  overflow:hidden;
  text-overflow:ellipsis; 
  text-overflow: -o-ellipsis-lastline;
  display:-webkit-box;
  -webkit-line-clamp:1;
  line-clamp: 1;
  -webkit-box-orient:vertical;
}
.search{
  flex: 1;
}
.pro-container{
  height: 100%;
  box-sizing: border-box;
  padding-top:112rpx;
}
.cate-first{
  float: left;
  width: 170rpx;
  height: 100%;
  background-color: #f0f0f0;
}

.tabs-drop{
  position:absolute;
  width:100%;
  top:104rpx;
  background:#fff;
  box-shadow: 0 12rpx 12rpx rgba(0,0,0, .08);
  z-index: 100;
}
.cate-first__container{
  width: 100% !important;
}
.cate-item{
  padding: 0!important;
  height: 100rpx;
  line-height: 100rpx !important;
  text-align: center;
  color: #666 !important;
  font-size: 30rpx;
  border-left: 0 !important;
  box-sizing: border-box;
}
.cate-active{
  background: #fff;
  border-left: 8rpx solid #fe2200;
}
.cate-second{
  margin-left:170rpx;
  height: 100%;
  position: relative;
}
.second-list{
  position: absolute;
  width: 100%;
}
.tabs-container{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.tabs-list{
  flex: 1;
  --tabs-height:100rpx;
  --tabs-line-height:100rpx;
  --gray-darker:#333;
  --red:#fff;
  --text-color:#ee0a24;
}

.arrow-down{
  background-color: #fff;
  padding:0 24rpx;
  width: 32rpx;
  height: 18rpx;
}
.pro-detail{
  height: 100%;
  box-sizing: border-box;
}
.detail-container{
  padding-top:180rpx;
  padding-bottom: 120rpx;
  height: 100%;
  box-sizing: inherit;
}

.card-style{
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.sel-spec{
  font-size: 20rpx;
  border: 2rpx solid #fe2200;
  border-radius: 22rpx;
  padding: 0 12rpx;
  background: #fe2200;
  color: #fff;
  line-height: 44rpx;
  height: 44rpx;
}
.state-container{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
}
.img-size{
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.selling-price{
  font-size: 32rpx;
  color: #fe2200;
  font-weight: bold;
}
.state-img{
  width: 40rpx;
  height: 40rpx;
}
.cart-pro-container{
  border-top-left-radius:24rpx;
  border-top-right-radius:24rpx;
  background-color: #fff;
  height:100%;
  width: 100%;
  overflow-y:scroll;
  padding-bottom:60px;
  position: absolute;
  bottom: 0;
  box-sizing:border-box;
}
.cart-img{
  line-height: 120rpx;
  height: 120rpx;
  position: absolute;
  top: -100rpx;
  left: 20rpx;
  z-index: 100;
}
.cart-img>image{
  /* position:absolute; */
  width:120rpx;
  height:120rpx;
  /* top: 20rpx;
  left: 20rpx;
  z-index: 888; */
}
.cart-img>text{
  position: absolute;
  display: inline-block;
  top: 0;
  left: 80rpx;
  width: 40rpx;
  line-height: 40rpx;
  border:2rpx #fff solid;
  background-color: #fe2200;
  color: #fff;
  text-align: center;
  font-size: 20rpx;
  border-radius: 20rpx;
  z-index: 999;
}
.cart-card-container{
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}
.cart-card{
  flex: 1;
}

.van-search__content{
  border: 2rpx solid #ccc;
}
.van-search{
  padding:20rpx !important;
}
.sort{
  height: 60rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.sort-condition{
  display: flex;
  align-items: center;
}

.shoping-cart{
  position: fixed;
  bottom: 0;
  height: 120rpx;
  line-height: 120rpx;
  padding: 0 24rpx;
  background-color: #fff;
  width: 100%;
  z-index: 999;
  box-shadow: 0 -4rpx 8rpx rgba(0,0,0, .08);
}
.spec-container{
  padding: 36rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.spec-flex{
  flex: auto;
}
.spec-name{
  width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.spec-price{
  color: #fe2200;
  text-align: center;
}
.pro-add-btn{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  padding-left:24rpx;
  vertical-align: middle;
}

.spec-btn>image,.pro-reduce-btn{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  padding: 0 24rpx;
  vertical-align: middle;
}

.check-all{
  display: flex;
  padding:40rpx 24rpx 24rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid #f0f0f0;
}

.checkbox{
  padding-right: 24rpx;
}

.cart-popup{
  height:100%;
  position:fixed;
  width:100%;
  z-index:100;
  background:rgba(0,0,0,0.7);
  bottom: 0;
}
.cart-popup-container{
  position: relative;
  width: 100%;
  height: 100%;
}
.cart-poi{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 65%;
}