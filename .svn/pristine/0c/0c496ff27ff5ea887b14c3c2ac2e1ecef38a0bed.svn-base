/* pages/purchase/order-manager/order-manager.wxss */
.tab-view{
  width:100%;
}
.order-list{
  border-top:20rpx solid #f0f0f0;
}
.order-item{
  position: relative;
  margin:24rpx;
  padding:24rpx;
  border-radius: 20rpx;
  box-shadow: 0px 3px 6px rgba(0,0,0,0.1);
  box-sizing: border-box;
}
.store{
  display: flex;
  justify-content: space-between;
  height: 120rpx;
  align-items: center;
}
.store-left{
  display: flex;
  align-items: center;
}
.store-title{
  margin-right:20rpx;
  display: inline-block;
  vertical-align: middle;
}
.tag{
  width:120rpx;
  height:120rpx;
}
.goods-list{
  position: relative;
  display: flex;
  height:120rpx;
  align-items: center;
}
.right-total{
  padding-left: 12rpx;
  box-shadow: -2px 0 0 rgba(0,0,0,0.02);
  text-align: center;
}
.img-box{
  flex:1;
  white-space: nowrap;
  overflow: auto;
}
.img-box .goods-img{
  width:120rpx;
  height:120rpx;
  margin-right:12rpx;
  border-radius: 10rpx;
  background: linear-gradient(to bottom,transparent 70%,rgba(0,0,0,0.5));
}

.goods-time{
  font-size: 24rpx;
  color:#999;
  text-align: right;
  height:60rpx;
  line-height: 60rpx;
}
.goods-price{
  font-size: 32rpx;
}
.goods-num{
  font-size: 20rpx;
}

.btn-group{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.btn-group button{
  margin: 20rpx 0 0 20rpx;
  min-width: 160rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  border-radius: 50rpx;
  background: #fff;
  flex-shrink: 0;
}
button::after{
  border:0;
}
.btn-default{
  color:#333;
  border:2rpx solid #999;
}
.btn-red{
  color: #fe2200;
  border:2rpx solid #fe2200;
}