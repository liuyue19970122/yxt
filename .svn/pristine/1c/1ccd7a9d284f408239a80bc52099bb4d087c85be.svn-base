/* components/banner/banner.wxss */
.banner{
  background-size: contain;
  position: relative;
}
.dot{
  position: absolute;
  right:-10rpx;
  top:-10rpx;
  z-index: 50;
  width:40rpx;
  height:40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  background: #fe2200;
  color:#fff;
  font-size:24rpx;
}
.banner-detail-content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:10rpx 20rpx;
  /* height:85%; */
}
.banner-detail{
  font-size: 32rpx;
  color:#fff;
  height:160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.banner-info{
  color:rgb(254,34,0);
  font-size: 36rpx;
  text-align: right;
  font-weight: bold
}
.num{
  font-weight: 500;
  margin-top:10rpx;
  font-size: 44rpx;
}
.unit{
  font-size:32rpx;
}