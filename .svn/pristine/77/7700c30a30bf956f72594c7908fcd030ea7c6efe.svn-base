/* pages/receipt/vage-list/list.wxss */
.box{
  display: flex;
}
.left-module{
  width:176rpx;
  min-height:calc(100vh - 112rpx);
  height:100%;
  background: #f5f5f5;
}

.right-module{
  width:574rpx;
  /* margin-left:24rpx; */
}
.name{
  width:65%;
  display: inline-block;
}
.type-first-item{
  height:100rpx;
  text-align: center;
  line-height: 100rpx;
}
.select-first-item{
  background: #fff;
  border-left:8rpx solid #fe2200;
}
.type-second-list{
  /* display: flex; */
  height:60rpx;
}
.type-second-list{
  /* display: flex; */
  font-size: 32rpx; 
  box-sizing: border-box;
  color:#333;
  justify-content: space-between;
  flex-wrap: nowrap;
  white-space: nowrap;
  width:550rpx;
  /* margin:24rpx 0; */
  margin-bottom:24rpx;
  /* position: fixed;
  top:0;
  right:0; */
  background: #fff;
  position: relative;
}
.type-second-item{
  min-width:118rpx;
  text-align: center;
  height:60rpx;
  line-height: 60rpx;
  margin-right:20rpx;
  padding:0 24rpx;
  box-sizing: border-box;
  display: inline-block;
  background: #f5f5f5;
  color:#666;
  font-size:28rpx;
  border-radius: 5rpx;
}
.select-second-item{
  background:#f5f5f5;
  color:#666;
   padding:5rpx 15rpx;
  font-size:14px;
  border-radius: 5rpx;
  /* color:#fff; */
  margin-right:24rpx;
  display: inline-block;
}
.vage-list{
  /* position: fixed;
  top:180rpx;
  right:0; */
  width:574rpx;
  height:calc(100vh - 200rpx);
}
.vage-item{
  display: flex;
  color:#333;
  min-height:120rpx;
  padding:20rpx 0;
  border-bottom:2rpx solid #F0F0F0;
  margin-left:24rpx
}
.vage-img{
  width:140rpx;
  height:140rpx;
  border-radius: 20rpx;
  position: relative;
}
.status{
  position: absolute;
  bottom:0;
  padding:5rpx;
  width:100%;
  font-size:24rpx;
  color:#f1f1f1;
  background: linear-gradient(to bottom,transparent 60%,rgba(0,0,0,0.7));
  z-index:55;
  border-radius: 0 0 20rpx 20rpx;
  height:120rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.vage-detail{
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  margin-left:24rpx;
  width:382rpx;
  padding-right:24rpx;
}
.vage-title{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.num{
  border-radius: 50rpx;
  color:#fff;
  background: #FF9B00;
  padding:0 10rpx;
  font-size:24rpx;
  min-width:40rpx;
  text-align: center;
}
.price{
  font-size:26rpx;
  color:#fe2200;
}
.vage-price{
  font-size:24rpx;
  color:#B1B1B1;
}
.vage-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.edit-icon{
  width:44rpx;
  height:44rpx;
}
.btn-group{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right:24rpx;
  width:500rpx;
  margin-top:24rpx;
  /* position: fixed;
  top:120rpx;
  right:0; */
}
.btn-group image{
  width:60rpx;
  height:60rpx;
  margin-left:40rpx;
}





.tab{
  font-size:14px !important;
}
.tab-active{
  color:#fe2200 !important;
}
.arrow-down{
  background-color: #fff;
  padding:40rpx 24rpx 0 0;
  width: 32rpx;
  height: 18rpx;
  position: absolute;
  right:-30rpx;
  top:0;
  z-index:10000
}
.type-module{
  box-shadow: 0px 3px 6px #f0f0f0;
  padding:20rpx 20rpx;
  position: absolute;
  background: #fff;
  z-index:1000;
  width:100%;
  margin-right:24rpx;
}
.type-item{
  background: #fe2200;
  padding:5rpx 15rpx;
  font-size:24rpx;
  border-radius: 5rpx;
  color:#fff;
  display: inline-block;
}
.unTouch{
  width:100%;
  height:100%;
  background: rgba(0,0,0,0.4);
  position: absolute;
  top:0;
  left:0;
  z-index:999;
}

.search-view{
