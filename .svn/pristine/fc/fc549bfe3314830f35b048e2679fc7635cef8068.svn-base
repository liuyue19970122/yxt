/* pages/mall/order-detail/order-detail.wxss */

.bg-color {
  width: 750rpx;
  height: 300rpx;
  background: linear-gradient(to bottom, #fe5339, #fff);
  position: absolute;
  top: 0;
  left: 0;
  z-index: -10;
}

.order-detail {
  margin: 24rpx;
  padding: 24rpx;
  width: 654rpx;
  border-radius: 20rpx;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 240rpx;
}

.top-module {
  display: flex;
  min-height: 120rpx;
}

.icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
}

.top-right-module {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #333;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  margin: 24rpx 0;
}

.btn-group button {
  width: 316rpx;
  height: 68rpx;
  text-align: center;
  line-height: 316rpx;
  background: #fff;
  border-radius: 0;
  border: 2rpx solid #f0f0f0;
  color: #77c481;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-group button::after {
  border: 0;
}

.btn-group button image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

/* .goods-list {
  margin:44rpx 24rpx;
} */

.goods-item {
  display: flex;
  font-size: 28rpx;
  color: #333;
  align-items: center;
  margin-bottom: 24rpx;
  margin-top:24rpx;
}
.goods-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.goods-info {
  flex: 1;
}
.goods-info>view{
  width: 100%;
  word-break:break-all;
  overflow:hidden;
  text-overflow:ellipsis; 
  text-overflow: -o-ellipsis-lastline;
  display:-webkit-box;
  -webkit-line-clamp:1;
  line-clamp: 1;
  -webkit-box-orient:vertical;
}
.goods-local,.goods-attr {
  font-size: 24rpx;
  color: #999;
}

.goods-num {
  flex-shrink:0;
  margin:0 24rpx;
}

.goods-price {
  flex-shrink:0;
}


.desc{
  background: #f0f0f0;
  width:634rpx;
  height:100rpx;
  padding:10rpx;
  /* border-radius:  */
}


.refuse-content{
  text-align: left;
  margin:40rpx 80rpx;
  color:#333;
  box-sizing: border-box;
  font-size: 40rpx;
}
.reason{
  height:308rpx;
  width:590rpx;
  margin-top:40rpx;
  padding:10rpx;
  font-size: 28rpx;
  border:2rpx solid #999;
}

.order-state-list{
  margin:60rpx 80rpx;
}
.order-state-item{
   font-size:28rpx;
   color:#999;
}
.state-item{
  display: flex;
  justify-content: space-between;
}
.state-dot{
  width:12rpx;
  height:12rpx;
  border-radius: 50%;
  background: #999;
  margin-right:30rpx;
}
.left-item{
  display: flex;
  align-items: center;
}
.vertical-line{
  height:60rpx;
  margin:10rpx 4rpx;
  border-left:4rpx solid #999;
}
.bill-input{
  padding: 12rpx;
  border: 1px solid #999;
  text-align: center;
  margin: 24rpx 48rpx;
  border-radius: 12rpx;
}
.follow-title{
  color: #333;
  font-size: 36rpx;
  text-align: center;
  padding: 24rpx 0;
}

