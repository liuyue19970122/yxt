/* pages/mall/handle-order/pro-add/add.wxss */
.form-item{
  margin: 0 24rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  border-bottom:1px solid #f0f0f0;
}

.label-block{
  display: block;
  line-height: 100rpx;
  font-size: 36rpx;
}
.form-item__inline{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}
.form-item__label{
  padding-right: 24rpx;
}
.form-item__content{
  flex: 1;
  text-align: right;
}
.content-area{
  width: 100%;
  border: 1px solid #f0f0f0;
  padding: 24rpx;
  height: 160rpx;
  box-sizing: border-box;
}
.btn-container{
  margin: 48rpx 0;
  padding:0 24rpx;
}
.btn-submit{
  background: #fe2200;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  text-align: center;
}

.del-container{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.del-container>view{
  margin: 24rpx 0;
}
.rub-class{
  height: 36rpx;
  width: 36rpx;
  margin-right: 12rpx;
}

.rub-text{
  color: #666;
  font-size: 36rpx;
}