/* pages/finance/rem-account/account.wxss */
page,.page-container,.scroll{
  width: 100%;
  height: 100%;
}
.header{
  position: fixed;
  top: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 24rpx;
  height: 100rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 32rpx;
  background-color: #f0f0f0;
}
.picker-content{
  display: inline-block;
  margin-right: 20rpx;
}
.list-container{
  width: 100%;
  height: 100%;
  padding:100rpx 0;
  box-sizing: border-box;
}
.card{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  margin: 0 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.card-info>text{
  display: block;
}
.card-info>text:first-child{
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color:#333;
}
.card-info>text:last-child{
  font-size: 28rpx;
  color:#999;
}
.info-money{
  font-size: 40rpx;
  color: #fe2200;
  font-weight: bold;
}

.bottom-fixed{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.bottom-rem{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  background-color: #fe2200;
}
.bottom-rem>view{
  display: flex;
  align-items: center;
  position: absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  -moz-transform: translate(-50%,-50%);
}
.bottom-rem>view>image{
  width: 50rpx;
  height: 50rpx;
  padding: 0 12rpx;
}

.bottom-rem>view>text{
  display: inline-block;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  vertical-align: middle;
}