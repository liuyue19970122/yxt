// pages/receipt/vage/material/detail.js
var util = require('../../../../utils/util.js');
const app = getApp()
var times = (new Date()).getTime()

Page({

  /**
   * 页面的初始数据
   */
  data: {
     goodsList:[],
     name:'',
     num:'',
     id:'',
     type:'new'
  },
  getNum(e){
    this.setData({
      num:e.detail
    })
  },
  getName(e){
    var that=this
    this.setData({
      name:that.data.goodsList[e.detail.value].goodsName,
      id: that.data.goodsList[e.detail.value].keyId
    })
  },
  getGoodsList(){
    var url = app.globalData.baseUrl +'apiStock/stock/inst/list'
    var data={}
    util.getRequestListData(url,data,false,this.getRes)
  },
  getRes(res){
    this.setData({
      goodsList:res.data.content,
      name: res.data.content[0].goodsName
    })
  },
  onSubmit(){
    var item={
      id:this.data.id,
      name:this.data.name,
      num: this.data.num
    }
    var prevPage = util.getPrevPage()
    var list = prevPage.data.matList
    if(this.data.type=='new'){
      list.push(item)
    }else{
      list.splice(this.data.index, 1, item)
    }
    prevPage.setData({
      matList: list
    })
    wx.navigateBack({
      delta: 1
    })
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    if (options.index) {
      var prevPage = util.getPrevPage()
      var list = prevPage.data.matList
      this.setData({
        name: list[options.index].name,
        id: list[options.index].id,
        num: list[options.index].num,
        type: 'update',
        index: options.index,
        lastType:prevPage.data.lastType
      })
    }
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    this.getGoodsList()
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})