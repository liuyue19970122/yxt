/**app.wxss**/
view,text{
  /* font-family: "Source Han Sans CN"; */
  font-size:32rpx;
  /* color:#333; */
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.border-bottom{
  border-bottom:2rpx solid #f0f0f0;
}
.empty{
  height:860rpx;
  line-height:860rpx;
  text-align: center;
  font-size: 24rpx;
  color:#ccc;
}
.full-page{
  min-height:100vh;
}
.submit-btn{
  width:240rpx;
  /* margin-top:60rpx; */
  /* margin-left:256rpx; */
  margin:60rpx auto 0;
  height:60rpx;
  color:#fff;
  background: red;
  font-size: 28rpx;
  line-height: 60rpx;
  margin-bottom:60rpx;
}
.submit-btn-raduis{
  border-radius: 50rpx;
  width:200rpx;
  margin:60rpx auto 0;
  height:60rpx;
  color:#fff;
  background: red;
  font-size: 28rpx;
  line-height: 60rpx;
  margin-bottom:60rpx;
}
.upload-btn{
  width:120rpx;
  height:120rpx;
  border:0;
  border-radius: 0;
  padding:0;
  display: inline-block;
}
.upload-btn image{
  width:100%;
  height:100%;
}
button::after{
  border-radius: 0;
  border:0;
}
.dot{
  width:40rpx;
  height:40rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size:28rpx;
  color:#fff;
  position: absolute;
  background: red;
  top:-10rpx;
  right:-10rpx;
}

.tag-red{
  background: #fe2200;
}
.tag-yellow{
  background: #f5a62a
}
.tag-green{
  background: #77c481
}
.tag-gray{
  background: #666;
}

.module-title{
  font-size: 36rpx;
  color:#333;
  text-align: center;
  margin:44rpx 0;
}

.hr-module{
  height:20rpx;
  width:100%;
  background: #f0f0f0;
}
.triggle-open{
  width:24rpx;
  height:14rpx;
}
.triggle-close{
  width:14rpx;
  height:24rpx;
}
.popTitle{
  font-size: 32rpx;
  color:#333;
  text-align: center;
  height:120rpx;
  line-height: 120rpx;
  border-bottom:2rpx solid #f5f5f5;
}
.del-icon{
  width:40rpx;
  height:40rpx;
}
/* 重写checkbox样式 */
checkbox .wx-checkbox-input{
  border-radius: 50%;/* 圆角 */
  width: 46rpx; /* 背景的宽 */
  height: 46rpx; /* 背景的高 */
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #fe2200;
  border: 1rpx solid #fe2200;
}

.block-module-title{
  height:80rpx;
  padding:0 24rpx;
  font-size:28rpx;
  color:#666;
  line-height: 80rpx;
  background:#f0f0f0;
}

.all-icon{
  width:24rpx;
  height:24rpx;
  margin-right:8rpx;
}
.time{
  font-size:24rpx;
  color:#999;
}


.btn-stock-in{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  position: fixed;
  z-index:44444;
  top:80%;
  right:15%;
  box-shadow: 1px 3px 6px #FEA194;
}


.op-btn-group{
  display: flex;
  flex: 1;
  width: 750rpx;
  position:fixed;
  bottom:0;
  left:0;
}
.op-btn-group button::after{
  border-radius: 0;
}
.op-btn-group button{
  border-radius: 0;
  height:120rpx;
  line-height: 120rpx;
  font-size: 40rpx;
  flex:1;
  border:0;
}
.n-btn {
  /* width: 50%; */
  color: #fff;
  background: #3b3634;
}

.y-btn {
  /* width: 50%; */
  color: #fff;
  background: #fe2200;
}
.sub-font{
  font-size:24rpx;
  color:#999;
  margin-top:10rpx;
}
.un-read{
  font-size:22rpx;
  color:#fe2200;
}

.add-icon{
  width:40rpx;
  height:40rpx;
}