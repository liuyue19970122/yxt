.shoping-cart{
  position: fixed;
  bottom: 0;
  height: 120rpx;
  line-height: 120rpx;
  padding: 0 24rpx;
  background-color: #fff;
  width: 100%;
  z-index: 999;
  box-shadow: 0 -4rpx 8rpx rgba(0,0,0, .08);
}
.cart-popup{
  height:100%;
  position:fixed;
  width:100%;
  z-index:100;
  background:rgba(0,0,0,0.7);
  bottom: 0;
}
.cart-popup-container{
  position: relative;
  width: 100%;
  height: 100%;
}
.cart-poi{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 65%;
}
.cart-pro-container{
  border-top-left-radius:24rpx;
  border-top-right-radius:24rpx;
  background-color: #fff;
  height:100%;
  width: 100%;
  overflow-y:scroll;
  padding-bottom:60px;
  position: absolute;
  bottom: 0;
  box-sizing:border-box;
}
.cart-img{
  line-height: 120rpx;
  height: 120rpx;
  position: absolute;
  top: -100rpx;
  left: 20rpx;
  z-index: 100;
}
.cart-img>image{
  width:120rpx;
  height:120rpx;
}
.cart-img>text{
  position: absolute;
  display: inline-block;
  top: 0;
  left: 80rpx;
  width: 40rpx;
  line-height: 40rpx;
  border:2rpx #fff solid;
  background-color: #fe2200;
  color: #fff;
  text-align: center;
  font-size: 20rpx;
  border-radius: 20rpx;
  z-index: 999;
}
.cart-card-container{
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}
.cart-card{
  flex: 1;
}
.cart-img-size{
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.check-all{
  display: flex;
  padding:40rpx 24rpx 24rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid #f0f0f0;
}

.checkbox{
  padding-right: 24rpx;
}

