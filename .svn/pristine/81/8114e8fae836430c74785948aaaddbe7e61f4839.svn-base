/* pages/pro_manage/pro_spec_edit/spec.wxss */
.form-item{
  margin: 0 24rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  border-bottom:1px solid #f0f0f0;
}

.label-block{
  display: block;
  line-height: 100rpx;
  font-size: 36rpx;
}
.form-item__inline{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}
.form-item__label{
  padding-right: 24rpx;
}
.form-item__content{
  flex: 1;
  text-align: right;
}
.form-btn{
  margin-top:100rpx;
}
.form-btn>button{
  width: 320rpx;
  line-height: 80rpx;
  background-color: #fe2200;
  border-radius: 40rpx;
  color: #fff;
}