/* pages/pro_manage/pro_list/list.wxss */
page{
  width: 100%;
  height: 100%;
}
.pro{
  height: 100%;
  position: relative;
}
.pro-search{
  position: absolute;
  width: 100%;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  background-color: #fe2200;
}
.location{
  display: flex;
  align-items: center;
  width: 200rpx;
  padding-left:20rpx;
}
.location>image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}
.location>text{
  font-size: 28rpx;
  overflow:hidden;
  color: #fff;
  text-overflow:ellipsis; 
  text-overflow: -o-ellipsis-lastline;
  display:-webkit-box;
  -webkit-line-clamp:1;
  line-clamp: 1;
  -webkit-box-orient:vertical;
}
.search{
  flex: 1;
}
.pro-container{
  height: 100%;
  box-sizing: border-box;
  padding-top:152rpx;
}
.cate-first{
  float: left;
  width: 160rpx;
  height: 100%;
  background-color: #f0f0f0;
}
.cate-first__container{
  width: 100% !important;
 
}
.cate-item{
  padding: 0!important;
  height: 100rpx;
  line-height: 100rpx !important;
  text-align: center;
  color: #666 !important;
  font-size: 30rpx;
  box-sizing: border-box;
}
.cate-active{
  background: #fff;
  border-left: 8rpx solid #fe2200;
}
.cate-second{
  margin-left:184rpx;
  height: 100%;
  position: relative;
}
.second-list{
  
  position: absolute;
  width: 100%;
 
}
.tabs-container{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}
.tabs-list{
  flex: 1;
  --tabs-height:100rpx;
  --tabs-line-height:100rpx;
  --gray-darker:#333;
  --red:#fff;
  --text-color:#ee0a24;
}

.arrow-down{
  background-color: #fff;
  padding:0 24rpx;
  width: 32rpx;
  height: 18rpx;
}
.pro-detail{
  height: 100%;
  box-sizing: border-box;
}
.detail-container{
  padding-top:180rpx;
  height: 100%;
  box-sizing: inherit;
}

.card{
  margin: 24rpx 24rpx 24rpx 0;
  box-shadow: 0 12rpx 24rpx rgba(0,0,0, .08);
  border-radius: 10px;
}
.card+.card{
 margin: 48rpx 24rpx 24rpx 0;
}
.card-item,.state-container{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
}
.card-item{
  padding:40rpx 24rpx;
}

.card-item .card-img{
  width: 160rpx;
  height: 160rpx;
}
.card-item .card-content{
  margin-left: 20rpx;
  flex: 1;
}
.card-content__title{
  font-size: 28rpx;
  overflow:hidden;
  text-overflow:ellipsis; 
  text-overflow: -o-ellipsis-lastline;
  display:-webkit-box;
  -webkit-line-clamp:2;
  line-clamp: 2;
  -webkit-box-orient:vertical;
}
.card-view{
  margin-bottom: 24rpx;
  font-size: 24rpx;
  color: #999;
}
.original-price{
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}
.selling-price{
  font-size: 32rpx;
  color: #fe2200;
  font-weight: bold;
}
.selling-state{
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  border: 1rpx #999 solid;
  padding: 0 12rpx;
  border-radius: 20rpx;
}
.van-search__content{
  border: 2rpx solid #ccc;
}
.van-search{
  padding:20rpx !important;
}
.sort{
  height: 60rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.sort-condition{
  display: flex;
  align-items: center;
}
.condition{
  display: flex;
  align-items: center;
}
.condition{
  line-height: 60rpx;
  font-size: 28rpx;
}
.condition-arrow{
  padding: 0 10rpx;
}
.triangle-down{
  display: block;
  width: 0; 
  height: 0;
  border-width: 12rpx;
  border-style: solid;
  border-color:#f0f0f0 transparent transparent transparent;
  margin-top: 4rpx;
}
.triangle-up{
  display: block;
  width: 0; 
  height: 0;
  border-width: 12rpx;
  border-style: solid;
  border-color:transparent transparent #f0f0f0  transparent;
  margin-bottom: 4rpx;
}