/* pages/mall/pro-details/detail.wxss */
.swiper{
  height: 500rpx;
}
.swiper-img{
  height: 100%;
  width: 100%;
}
.pro-container{
  margin:0 24rpx; 
}
.pro-name{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  margin-top: 44rpx;
}
.font-title{
  font-size: 40rpx;
  color: #333;
}
.pro-name>text{
  flex: 1;
  padding-right: 24rpx;
}
.share-img{
  width: 40rpx;
  height: 40rpx;
}
.pro-price{
  font-size: 40rpx;
  color: #fe2200;
  font-weight: bold;
  padding-bottom: 44rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.pro-desc{
  margin: 44rpx 0;
}
.pro-blank{
  height: 44rpx;
  background-color: #f0f0f0;
}
.pro-title{
  line-height: 120rpx;
  text-align: center;
}
