/* pages/mall/order-manager/order-manager.wxss */
.tab-view{
  display: flex;
  font-size: 32rpx; 
  box-sizing: border-box;
  color:#333;
  justify-content: space-between;
  flex-wrap: nowrap;
  white-space: nowrap;
}
.tab-item{
  min-width:118rpx;
  text-align: center;
  height:80rpx;
  line-height: 80rpx;
  padding:0 24rpx;
  box-sizing: border-box;
  display: inline-block;
}
.active-item{
  border-bottom: 6rpx solid #ff0022;
}

.order-list{
  border-top:20rpx solid #f0f0f0;
}
.order-item{
  /* display: flex; */
  position: relative;
  margin:44rpx 24rpx;
  padding:20rpx 20rpx;
  /* height:172rpx; */
  border-radius: 20rpx;
  box-shadow: 0px 3px 6px rgba(0,0,0,0.1);
  width:702rpx;
  box-sizing: border-box;
}
.store{
  display: flex;
  height:80rpx;
  line-height: 50rpx;
}
.store-left{
  display: flex;
}
.store-title{
  margin-right:20rpx;
}
/* .store image{
  width:60rpx;
  height:60rpx;
} */
.btn-group{
  display: flex;
  justify-content: flex-end;
  height:100rpx;
  align-items: center;
}
.btn-group button{
  margin:0 0 0 20rpx;
  padding:0;
  width:160rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color:#333;
  border-radius: 50rpx;
  background: #fff;
  border:2rpx solid #999;
}
button::after{
  border:0;
}
.goods-list{
  width:100%;
  position: relative;
  overflow: hidden;
  display: flex;
  height:120rpx;
  align-items: center;
}
.right-total{
  height:120rpx;
  min-width:100rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  color:#333;
  position: absolute;
  right:0;
  top:0;
  background: linear-gradient(to left,#fff,rgba(255,255,255,0.9));
  box-shadow: -5px 0 10px #e1e1e1;
}

.goods-img{
  width:120rpx;
  height:120rpx;
  margin-right:12rpx;
  border-radius: 10rpx;
}
.goods-info{
  position: absolute;
  right:0;
  top:0;
  width:160rpx;
  height:120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  /* padding:24rpx 24rpx 24rpx 0; */
  font-size: 24rpx;
  color:#333;
}
.goods-name{
  font-size: 28rpx;
  color:#333;
  width:360rpx;
}
.goods-info-2{
  display: flex;
  justify-content: space-between;
  width:574rpx;
}
.tag{
  position: absolute;
  right:60rpx;
  top:-20rpx;
  width:120rpx;
  height:120rpx;
  /* width:132rpx; */
  /* height:52rpx; */
  text-align: center;
  line-height: 52rpx;
  color:#fff;
  border-radius: 50rpx 0 0 50rpx;
  font-size: 28rpx;
}
.goods-time{
  font-size: 24rpx;
  color:#999;
  text-align: right;
  height:60rpx;
  line-height: 60rpx;
}
.goods-price{
  font-size: 32rpx;
}
.goods-num{
  font-size: 20rpx;
}