<view class='tab-view'>
  <view class='tab-item {{type=="all"?"active-item":""}} ' data-type='all' bindtap='changeTab'>全部</view>
  <view class='tab-item {{type=="new"?"active-item":""}}' data-type='new' bindtap='changeTab'>未处理</view>
  <view class='tab-item {{type=="ing"?"active-item":""}}' data-type='ing' bindtap='changeTab'>送货中</view>
  <view class='tab-item {{type=="finish"?"active-item":""}}' data-type='finish' bindtap='changeTab'>已完成</view>
  <view class='tab-item {{type=="after"?"active-item":""}}' data-type='after' bindtap='changeTab'>退款/售后</view>
</view>

