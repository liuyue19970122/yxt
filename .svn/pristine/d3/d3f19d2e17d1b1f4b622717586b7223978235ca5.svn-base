<!--pages/stock/check-detail/detail.wxml-->
<view class='module-title-big'>盘点中</view>
<view class='form'>
  <form-item label='仓库' isBorder='{{false}}' isRequired='{{true}}' isPicker='{{true}}' ></form-item>
</view>
<view class='module-title-big'>添加货品
 <image class='add-icon' src='/utils/img/add.png'></image>
</view>
<view class='good-list'>
  <view class='goods-item'>
    <view class='goods-check-item'>
      <view class='good-item-info'>
        <view class='goods-name'>精品冬枣</view>
        <view></view>
      </view>
      <view class='good-item-info'>
        <view class='goods-count'>20元/件
        </view>
        <view class='goods-price'>本次盘点：未盘点</view>
      </view>
    </view>
    <view class='right-icon'></view>
  </view>
</view>

<view class='op-btn-group'>
  <button class='n-btn'>取消盘点</button>
  <button class='y-btn'>保存盘点</button>
</view>