// pages/stock/set/set.js

var util = require('../../../utils/util.js');
const app = getApp()
Page({

  /**
   * 页面的初始数据
   */
  data: {
    titleArray: ["编号", "描述", "操作"],
    dataArray: [{
      "编号": '1',
      "描述": 44,
      "操作": ''
    }],
    pageTotal: 1,
    pages: [],
    pageSize: 10,
    pageNum: 1,
    show: false,
    selectId: '',
    selectNo: "",
    selectDes:'',
    isAdd:false
  },
  showPopup(e) {
    this.setData({
      show: true,
      isAdd:false,
      selectId:e.currentTarget.dataset.id,
      selectNo: e.currentTarget.dataset.no,
      selectDes: e.currentTarget.dataset.des,
    });
  },
  showPopupNew() {
    console.log("new")
    this.setData({
      show: true,
      isAdd:true,
      selectId:'',
      selectNo: '',
      selectDes: '',
    });
  },
  onClose() {
    this.setData({
      show: false
    });
  },
  changeName(e){
    this.setData({
      selectNo:e.detail.value
    })
  },
  changeDes(e) {
    this.setData({
      selectDes: e.detail.value
    })
  },
  getStockList() {
    var url = app.globalData.baseUrl + 'apiStock/stock/location/list'
    var data = {
      pageSize: this.data.pageSize,
      pageNum: this.data.pageNum
    }
    util.getRequestListData(url, data, false, this.stockListRes)
  },
  stockListRes: function(res) {
    this.setData({
      dataArray: res.data.content.list,
      pages: res.data.content.navigatepageNums,
      pageTotal: res.data.content.pages
    })
  },
  addStock(){
    var url=app.globalData.baseUrl+'apiStock/stock/location/add'
    var data={
      locationName:this.data.selectNo,
      description:this.data.selectDes
    }
    util.postRequestList(url,data,false,this.addRes)
  },
  changeStock() {
    var url = app.globalData.baseUrl + 'apiStock/stock/location/updateName'
    var data = {
      locationId:this.data.selectId,
      locationName: this.data.selectNo,
      description: this.data.selectDes
    }
    util.postRequestList(url, data, false, this.addRes)
  },
  addRes(res){
    this.setData({
      show:false,
      selectNo:'',
      selectId:'',
      selectDes:''
    })
    this.getStockList()
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function(options) {
    this.getStockList()
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function() {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function() {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function() {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function() {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function() {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function() {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function() {

  }
})