    if(res.data.code==200){
      wx.showModal({
        title: '提示',
        content: '添加成功',
        // showCancel:false,
        cancelText:'返回',
        confirmText:'继续',
        success:function(res){
          if(res.comfirm){
            return false
          }
          if(res.cancel){
            wx.navigateBack({
              delta:1
            })
          }
        }
      })
    }
  },
  /**
   * 生命周期函数--监听页面加载
