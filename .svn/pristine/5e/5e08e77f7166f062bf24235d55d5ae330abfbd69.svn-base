    if(res.data.code==200){
      this.setData({
        roleList:res.data.content
      })
    }
  },
  getDate(e){
    this.setData({
      date: e.detail
    })
  },
  getName(e){
    this.setData({
      name:e.detail
    })
  },
  getTel(e){
    this.setData({
      tel: e.detail
    })
  },
  getMoney(e){
    var detail = util.clearNoNum(e.detail)
    this.setData({
