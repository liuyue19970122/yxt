/* pages/mall/mall-store/store-cate/cate.wxss */
page{
  height: 100%;
  width: 100%;
}
.pro-search{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  background-color: #fe2200;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 100;
  height: 120rpx;
}
.location{
  display: flex;
  align-items: center;
  width: 170rpx;
  padding-left:20rpx;
}
.location>image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
}
.location>text{
  color: #fff;
  font-size: 36rpx;
}
.location>button{
  color:#fff;
  border-radius:0;
  padding:0;
  margin:0;
  background:#fe2200;
  font-size: 28rpx;
}

.location>text,location>button{
  overflow:hidden;
  text-overflow:ellipsis; 
  text-overflow: -o-ellipsis-lastline;
  display:-webkit-box;
  -webkit-line-clamp:1;
  line-clamp: 1;
  -webkit-box-orient:vertical;
}
.search{
  flex: 1;
  --text-size:36rpx;
}
.pro-container{
  height: 100%;
  box-sizing: border-box;
  padding:120rpx 0;
}

.cate-container{
  display: flex;
  flex-wrap: nowrap;
  height: 164rpx;
  width: 100%;
}
.cate-container>view{
  flex-shrink: 0;
  width: 20%;  
  text-align: center;
  padding: 20rpx 0;
}
.cate-container>view>image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.cate-title{
  text-align: center;
  font-size: 24rpx;
  color: #515151;
  line-height: 44rpx;
  /* margin: 20rpx 0 40rpx; */
}
.cate-active{
  color:#fe2200 !important;
}

.pro-detail{
  height: 100%;
  box-sizing: border-box;
}
.detail-container{
  padding-top:180rpx;
  padding-bottom: 120rpx;
  height: 100%;
  box-sizing: inherit;
}

.card-style{
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.sel-spec{
  font-size: 22rpx;
  border-radius: 50rpx;
  padding: 8rpx 20rpx;
  background: #fe2200;
  color: #fff;
}
.state-container{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
}
.img-size{
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.selling-price{
  font-size: 32rpx;
  color: #fe2200;
  font-weight: bold;
}
.state-img{
  width: 48rpx;
  height: 48rpx;
}
.cart-pro-container{
  border-top-left-radius:24rpx;
  border-top-right-radius:24rpx;
  background-color: #fff;
  height:100%;
  width: 100%;
  overflow-y:scroll;
  padding-bottom:60px;
  position: absolute;
  bottom: 0;
  box-sizing:border-box;
}
.cart-img{
  line-height: 120rpx;
  height: 120rpx;
  position: absolute;
  top: -100rpx;
  left: 20rpx;
  z-index: 100;
}
.cart-img>image{
  width:120rpx;
  height:120rpx;
}
.cart-img>text{
  position: absolute;
  display: inline-block;
  top: 0;
  left: 80rpx;
  width: 40rpx;
  line-height: 40rpx;
  border:2rpx #fff solid;
  background-color: #fe2200;
  color: #fff;
  text-align: center;
  font-size: 20rpx;
  border-radius: 20rpx;
  z-index: 999;
}
.cart-card-container{
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}
.cart-card{
  flex: 1;
}

.van-search__content{
  border: 2rpx solid #ccc;
}
.van-search{
  padding:20rpx !important;
}

.shoping-cart{
  position: fixed;
  bottom: 0;
  height: 120rpx;
  line-height: 120rpx;
  padding: 0 24rpx;
  background-color: #fff;
  width: 100%;
  z-index: 999;
  box-shadow: 0 -4rpx 8rpx rgba(0,0,0, .08);
}
.spec-container{
  padding: 36rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.spec-flex{
  flex: auto;
}
.spec-name{
  width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.spec-price{
  color: #fe2200;
  text-align: center;
}
.pro-add-btn{
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  padding-left:24rpx;
  vertical-align: middle;
}

.spec-btn>image,.pro-reduce-btn{
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  padding: 0 24rpx;
  vertical-align: middle;
}

.check-all{
  display: flex;
  padding:40rpx 24rpx 24rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid #f0f0f0;
}

.checkbox{
  padding-right: 24rpx;
}

.cart-popup{
  height:100%;
  position:fixed;
  width:100%;
  z-index:100;
  background:rgba(0,0,0,0.7);
  bottom: 0;
}
.cart-popup-container{
  position: relative;
  width: 100%;
  height: 100%;
}
.cart-poi{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 65%;
}