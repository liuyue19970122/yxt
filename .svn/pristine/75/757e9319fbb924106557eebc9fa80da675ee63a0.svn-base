/**app.wxss**/
view,text{
  font-family: "Source Han Sans CN"
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.border-bottom{
  border-bottom:2rpx solid #f0f0f0;
}
.empty{
  height:860rpx;
  line-height:860rpx;
  text-align: center;
  font-size: 24rpx;
  color:#ccc;
}
.full-page{
  min-height:100vh;
}
.submit-btn{
  width:240rpx;
  /* margin-top:60rpx; */
  /* margin-left:256rpx; */
  margin:60rpx auto 0;
  height:60rpx;
  color:#fff;
  background: red;
  font-size: 28rpx;
  line-height: 60rpx;
  margin-bottom:60rpx;
}
.dot{
  width:40rpx;
  height:40rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size:28rpx;
  color:#fff;
  position: absolute;
  background: red;
  top:-10rpx;
  right:-10rpx;
}

.tag-red{
  background: #fe2200;
}
.tag-yellow{
  background: #f5a62a
}
.tag-green{
  background: #77c481
}
.tag-gray{
  background: #666;
}

.module-title{
  font-size: 36rpx;
  color:#333;
  text-align: center;
  margin:44rpx 0;
}

.hr-module{
  height:20rpx;
  width:100%;
  background: #f0f0f0;
}
.triggle-open{
  width:24rpx;
  height:14rpx;
}
.triggle-close{
  width:14rpx;
  height:24rpx;
}
.popTitle{
  font-size: 32rpx;
  color:#333;
  text-align: center;
  height:120rpx;
  line-height: 120rpx;
  border-bottom:2rpx solid #f5f5f5;
}
.del-icon{
  width:40rpx;
  height:40rpx;
}