/* pages/mall/handle-order/pro-search/search.wxss */
.search-container{
  display: flex;
  align-items: center;
  border-bottom: 4rpx solid #f0f0f0;
}
.search{
  flex: 1;
}
.add-img{
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  margin-right: 24rpx;
}
.add-img>image{
  width: 100%;
  height: 100%;
}
.card{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 24rpx;
  padding: 28rpx 0 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  color: #333;
}
.card-info{
  flex:1;
  margin-left:24rpx;
}
.info-name{
  margin-bottom: 24rpx;
  font-size: 32rpx;
}
.info-other{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}
.fixed-bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
}
.btn{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: inline-block;
  border-radius: 0;
  color: #fff;
  font-size: 36rpx;
}
.btn-save{
  background: #443732;
}
.btn-submit{
  background: #fe2200;
}