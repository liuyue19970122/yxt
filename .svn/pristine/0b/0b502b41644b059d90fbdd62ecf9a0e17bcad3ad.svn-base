/**app.wxss**/

view, text {
  /* font-family: "Source Han Sans CN"; *//* font-size:32rpx; *//* color:#333; */
}
.op-icon{
  width:100rpx;
  height:100rpx;
}
.form{
  margin:0 24rpx;
}
.msg-info{
  font-size:24rpx;
  color:#fe2200;
  padding:24rpx;
}
.text-over {
  width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.border-bottom {
  border-bottom: 2rpx solid #f0f0f0;
}

.empty {
  height: 500rpx;
  /* line-height: 600rpx; */
  max-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  /* text-align: center; */
  font-size: 24rpx;
  color: #ccc;
}
/* 
.full-page {
  min-height: 100vh;
} */

.submit-btn {
  width: 240rpx;
  /* margin-top:60rpx; *//* margin-left:256rpx; */
  margin: 60rpx auto 0;
  height: 60rpx;
  color: #fff;
  background: red;
  font-size: 28rpx;
  line-height: 60rpx;
  margin-bottom: 60rpx;
}

.submit-btn-raduis {
  border-radius: 50rpx;
  width: 200rpx;
  margin: 60rpx auto 0;
  height: 60rpx;
  color: #fff;
  background: red;
  font-size: 28rpx;
  line-height: 60rpx;
  margin-bottom: 60rpx;
}

.upload-btn {
  width: 120rpx;
  height: 120rpx;
  border: 0;
  border-radius: 0;
  padding: 0;
  display: inline-block;
}

.upload-btn image {
  width: 100%;
  height: 100%;
}

button::after {
  border-radius: 0;
  border: 0;
}

.dot {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #fff;
  position: absolute;
  background: red;
  top: -10rpx;
  right: -10rpx;
}

.tag-red {
  background: #fe2200;
}

.tag-yellow {
  background: #f5a62a;
}

.tag-green {
  background: #77c481;
}

.tag-gray {
  background: #666;
}

.module-title {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  margin: 44rpx 0;
}

.hr {
  height: 2rpx;
  background: #f0f0f0;
  width:100%;
}

.hr-module {
  height: 20rpx;
  width: 100%;
  background: #f0f0f0;
}
.blank-module{
  height:40rpx;
}

.triggle-open {
  width: 24rpx;
  height: 14rpx;
}
.triggle-close{
  width:14rpx;
  height:24rpx;
}
.triggle-open__rotate{
  transform: rotate(-90deg);
  -webkit-transform:rotate(-90deg);
  -moz-transform: rotate(-90deg);
  -o-transform: rotate(-90deg);
  -ms-transform: rotate(-90deg);
}

.popTitle {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.del-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 重写checkbox样式 */

checkbox .wx-checkbox-input {
  border-radius: 50%; /* 圆角 */
  width: 46rpx; /* 背景的宽 */
  height: 46rpx; /* 背景的高 */
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #fe2200;
  border: 1rpx solid #fe2200;
}

.block-module-title {
  height: 80rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 80rpx;
  background: #f0f0f0;
}

.all-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.btn-stock-in {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: fixed;
  z-index: 44444;
  bottom: 20rpx;
  right: 40rpx;
  box-shadow: 1px 3px 6px #fea194;
}
.btn-stock-insert{
   width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: fixed;
  z-index: 44444;
  bottom: 20rpx;
  right: 180rpx;
  box-shadow: 1px 3px 6px #fea194;
}
.op-btn-group {
  display: flex;
  flex: 1;
  width: 750rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}

.op-btn-group button::after {
  border-radius: 0;
}

.op-btn-group button {
  border-radius: 0;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  flex: 1;
  border: 0;
}

.n-btn {
  /* width: 50%; */
  color: #fff;
  background: #3b3634;
  display: flex;
  align-items: center;
  justify-content: center;
}

.y-btn {
  /* width: 50%; */
  color: #fff;
  background: #fe2200;
  display: flex;
  align-items: center;
  justify-content: center;
}
.f-btn{
  color: #fff;
  background: #77c481;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sub-font {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.un-read {
  font-size: 22rpx;
  color: #fe2200;
}

.add-icon {
  width: 40rpx;
  height: 40rpx;
}
/* 暂无内容css */
.none-content{
  position:absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  -webkit-transform:translate(-50%,-50%);
  -o-transform:translate(-50%,-50%);
  -moz-transform: translate(-50%,-50%);
  -ms-transform: translate(-50%,-50%);
  color: #999;
  font-size: 36rpx;
}
/* reach-bottom */
.reach-bottom{
  width: 100%;
  text-align: center;
  padding: 12rpx 0;
}
.reach-bottom>image{
  width: 124rpx;
  height: 16rpx;
}

.red-btn {
  background: #fe2200;
  color: #fff;
  text-align: center;
  padding: 15px 0;
  line-height: 24px;
  width: 60px;
  font-size: 30rpx;
}

.gray-btn {
  background: #707070;
  color: #fff;
  text-align: center;
  padding: 15px 0;
  line-height: 24px;
  width: 60px;
  font-size: 30rpx;
}

.btn-group {
  display: flex;
  font-size: 30rpx;
}

.big-submit-btn{
  width:702rpx;
  margin:60rpx 24rpx;
  height:80rpx;
  font-size:36rpx;
  box-shadow:0 4rpx 8rpx rgba(0,0,0,0.2);
  background: #fe2200;
  color:#fff;
  line-height:80rpx;
}

.text-one__line{
  overflow:hidden;
  text-overflow:ellipsis; 
  text-overflow: -o-ellipsis-lastline;
  display:-webkit-box;
  word-break: break-all;
  -webkit-line-clamp:1;
  line-clamp: 1;
  -webkit-box-orient:vertical;
}
.right-icon{
  border-top:4rpx solid #999;
  border-right:4rpx solid #999;
  transform: rotate(45deg);
  width:20rpx;
  height:20rpx;
}
.set-icon{
  width:30rpx;
  height:32rpx;
}
.down-icon{
  width:24rpx;
  height:12rpx;
  margin-left:12rpx;
}
.select-icon{
  width:40rpx;
  height:40rpx;
}
.module-title-big{
  font-size:36rpx;
  color:#333;
  font-weight: bold;
  height:120rpx;
  line-height: 120rpx;
  padding:0 24rpx;
  background:#f5f5f5;
}
.submit-dialog-btn {
  width: 514rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  border-radius: 20rpx;
  background: #fe2200;
  margin: 30rpx 40rpx;
}
.tag{
  width:80rpx;
  height:32rpx;
  font-size:20rpx;
  text-align: center;
  line-height:32rpx;
}
.finish-tag{
  border:2rpx solid #78c683;
  color:#78c683;
}
.ing-tag{
  border:2rpx solid #7878c6;
  color:#7878c6;
}
.cancel-tag{
  border:2rpx solid #fe2200;
  color:#fe2200;
}
.tiggle-icon{
  width:24rpx;
  height:12rpx;
  margin-left:10rpx;
}