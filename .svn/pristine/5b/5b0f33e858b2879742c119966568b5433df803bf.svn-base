  onClose(event) {
    let that=this
    const { position, instance } = event.detail;
    console.log(event)
    switch (position) {
      case 'left':
      case 'cell':
        instance.close();
        break;
      case 'right':
        setTimeout(()=>{
          if (that.data.specActType==='delete'){
            wx.showModal({
              title: '提示',
              content: '确认是否删除？',
              success(res) {
                if (res.confirm) {
                  if (that.data.actType === 'add') {
                    let curIndex = that.data.delSpecIndex
                    let list = that.data.specList
                    list.splice(curIndex,1)
                    let sels = []
                    list.forEach((item, index) => {
                      if (item.status === 1) {
                        sels.push(index.toString())
                      }
                    })
                    that.setData({
                      specList:list,
                      specSelArr: sels
                    })
                  }
                  if (that.data.actType==='edit'){
                    that.deleteProAttr()
                  }
                } else if (res.cancel) {
                  console.log('用户点击取消')
                }
              }
            })
          }
        },200)
        instance.close();
        break;
    }
  },
