// pages/purchase/address-detail/address-detail.js
var city = require('../../../utils/city2.js');
var util = require('../../../utils/util.js');
// var bmap = require('../../../utils/bmap-wx.min.js');
var QQMapWX = require('../../../utils/qqmap-wx-jssdk.min.js');
var qqmapsdk;
var wxMarkerData = [];
const app = getApp()
Page({

  /**
   * 页面的初始数据
   */
  data: {
    areaList: city.address,
    areaShow: false,
    address: '',
    sugData: '',
    suggestion: [],
    isSelect: false,
    addObj: {},
    name:'',
    detail:'',
    mobile:'',
    isDefault:false,
    id:'',
    // changeDetail:{}
  },
  showPopup() {
    this.setData({
      areaShow: true
    });
  },
  onChange({ detail }) {
    // 需要手动对 checked 状态进行更新
    this.setData({ isDefault: detail });
  },
  onClose() {
    this.setData({
      areaShow: false
    });
  },
  confirmArea(e) {

  },
  getDetailAddress(e) {
    this.setData({
      detail: e.detail
    })
  },
  getTel(e){
    this.setData({
      mobile:e.detail
    })
  },
  getName(e) {
    console.log(e)
    this.setData({
      name:e.detail
    })
  },
  saveAddress() {
    var url = app.globalData.baseUrl + 'apiMall/address/add'
    console.log(this.data.addObj)
    console.log(this.data.addObj.province)
    var data={
      provice: this.data.addObj.province,
      city: this.data.addObj.city,
      area: this.data.addObj.district,
      address: this.data.addObj.title+this.data.detail,
      linkName: this.data.name,
      mobile: this.data.mobile,
      isDefault: this.data.isDefault==true?1:0,
    }
    util.postRequestList(url,data,false,this.addRes)
  },
  addRes(res){
    if(res.data.code==200){
      wx.showModal({
        title: '提示',
        content: '添加成功',
        showCancel:false,
        success:function(res){
          wx.navigateBack({
            delta:1
          })
        }
      })
    }else{
      wx.showModal({
        title: '提示',
        showCancel:false,
        content: res.data.message,
      })
    }
  },
  backfill: function(e) {
    var id = e.currentTarget.id;
    for (var i = 0; i < this.data.suggestion.length; i++) {
      if (i == id) {
        this.setData({
          backfill: this.data.suggestion[i].title,
          addObj: this.data.suggestion[i],
          isSelect: true
        });
      }
    }
  },

  //触发关键词输入提示事件
  getsuggest: function(e) {
    // console.log(e)
    var _this = this;
    //调用关键词提示接口
    qqmapsdk.getSuggestion({
      //获取输入框值并设置keyword参数
      keyword: e.detail, //用户输入的关键词，可设置固定值,如keyword:'KFC'
      region: '成都', //设置城市名，限制关键词所示的地域范围，非必填参数
      success: function(res) { //搜索成功后的回调
        console.log(res);
        var sug = [];
        for (var i = 0; i < res.data.length; i++) {
          sug.push({ // 获取返回结果，放到sug数组中
            title: res.data[i].title,
            id: res.data[i].id,
            addr: res.data[i].address,
            city: res.data[i].city,
            district: res.data[i].district,
            latitude: res.data[i].location.lat,
            longitude: res.data[i].location.lng,
            province: res.data[i].province
          });
        }
        _this.setData({ //设置suggestion属性，将关键词搜索结果以列表形式展示
          suggestion: sug,
          isSelect: false
        });
      },
      fail: function(error) {
        console.error(error);
      },
      complete: function(res) {
        console.log(res);
      }
    });
  },
  // 绑定input输入 
  bindKeyInput: function(e) {
    var that = this;
    // 新建百度地图对象 
    var BMap = new bmap.BMapWX({
      ak: 'iA1eySnmo2Xd55umwyFpQKxGlNN8ODs1'
    });
    var fail = function(data) {
      console.log(data)
    };
    var success = function(data) {
      var sugData = '';
      for (var i = 0; i < data.result.length; i++) {
        sugData = sugData + data.result[i].name + '\n';
      }
      that.setData({
        sugData: sugData
      });
    }
    // 发起suggestion检索请求 
    BMap.suggestion({
      query: e.detail.value,
      region: '成都',
      city_limit: true,
      fail: fail,
      success: success
    });
  },

  // 点击地址列表进入详情请求
  getAddress(){
    var url = app.globalData.baseUrl + 'apiMall/address/list'
    util.getRequestList(url, false, this.addressRes)
  },
  addressRes:function(res){
    var list=res.data.content
    var that=this
    for(var item of list){
      if(item.id==this.data.id){
        that.setData({
          name: item.contactName,
          mobile: item.phone,
          isDefault: item.isDefault
        })
      }
    }
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function(options) {
    // 实例化API核心类
    qqmapsdk = new QQMapWX({
      key: 'APYBZ-TKQ6X-GAJ4A-7CDCW-JHK4K-LFB2Q'
    });
    if(options.id){
      this.setData({
        id:options.id
      })
    }
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function() {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function() {
    
  },


  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function() {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function() {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function() {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function() {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function() {

  }
})