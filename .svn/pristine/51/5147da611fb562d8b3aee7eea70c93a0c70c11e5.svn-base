/* pages/purchase/address-detail/address-detail.wxss */
.address-content{
  width:750rpx;
  height:100vh;
  background: #f0f0f0;
  /* padding: */
}
.form-item{
  padding:24rpx 24rpx;
  font-size:24rpx;
  color:#333;
  display: flex;
  background: #fff;
  justify-content: space-between;
  align-items: center;
}
.form--input{
  text-align: text;
  display: flex;
  justify-content: space-between;
  width:70%;
}
.label{
  font-weight: 500;
}
.save-btn{
  width:702rpx;
  position: fixed;
  bottom:100rpx;
  left:24rpx;
  background: #ff2200;
  color:#fff;
  font-size: 32rpx;
  border-radius: 50rpx;
}
button::after{
  border:0;
}
.default-triggle{
  display: flex;
  justify-content: flex-end;
}
.address-map{
  display: flex;
  align-items:center;
  justify-content:space-between;
  padding:24rpx;
  background:#fff;
  color: #999;
  border-bottom:2rpx solid #f0f0f0;
}
.address-map>label,.form-textarea>label{
  display: inline-block;
  margin-right: 24rpx;
}
.form-title{
  flex: 1;
  color: #999;
  text-align: right;
}
.form-title>image{
  margin-left: 24rpx;
}

.form-textarea{
  display: flex;
  justify-content: space-between;
  padding:24rpx;
  background:#fff;
  color: #999;
  border-bottom:2rpx solid #f0f0f0;
}
.form-content{
  flex: 1;
}
.form-textarea>label>text{
  color: #fe2200;
}
.form-content>textarea{
  width: 100%;
  height: 120rpx;
  padding: 12rxp;
  border-bottom:2rpx solid #f0f0f0;
}
.form-content>text{
  display: inline-block;
  padding: 12rpx 0;
  font-size: 24rpx;
  color: #fe2200;
}