/* pages/receipt/pay-order/pay.wxss */
.order-form{
  padding:0 24rpx;
}

.order-price{
  color:#fe2200;
}
.pop-title{
  text-align: left;
  font-size:32rpx;
  color:#333;
  padding:0 24rpx;
  height:80rpx;
  line-height: 80rpx;
  display: flex;
}
.pop-content{
  min-height:280rpx;
}
.pay-type-list{
  display: flex;
  flex-wrap: wrap;
  margin:0 80rpx 40rpx 80rpx;
}
.pay-type-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:40rpx;
}
.pay-type-item:not(:nth-child(4n+4)){
  margin-right:90rpx;
}
.type-icon{
  width:80rpx;
  height:80rpx;
}