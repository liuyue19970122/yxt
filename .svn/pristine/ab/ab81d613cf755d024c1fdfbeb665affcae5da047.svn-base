/* components/page-title/page-title.wxss */
/* pages/stock/set/set.wxss */

.title-module {
  height: 108rpx;
  line-height: 108px;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.left-title {
  display: flex;
  height: 100%;
  align-items: center;
}

.left-title image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.left-title view {
  font-weight: 550;
  /* color:#333; */
}
.right-title{
  height:100%;
  display: flex;
  align-items: center;
}
.right-title image{
  width:60rpx;
  height:60rpx;
}
.right-title image:not(:last-child){
  margin-right:20rpx;
}
.right-title .tiggle-icon{
    width:24rpx;
  height:12rpx;
}
.picker{
  min-width:100rpx;
  text-align: right;
  font-size: 28rpx;
  color:#333;
}