<!--components/form-item/form-item.wxml-->
<view class='form-item {{isBorder?"border-bottom":""}}' style='{{itemStyle}}'>
  <view class='label' style="{{labelStyle}}">{{label}}
    <text wx:if='{{isRequired}}' style='color:red'>*</text>ï¼š
  </view>
  <view class='form--input'>
    <input class="weui-input" style="{{inputStyle}}" type='{{type}}' disabled="{{isReadon}}" value="{{value}}" bindinput="onInput" wx:if='{{!isPicker&&!isTimePicker}}' auto-focus placeholder="{{placeholder}}" />
    <picker style="{{inputStyle}}" bindchange="change" wx:if='{{isPicker}}' value="{{index}}" range="{{array}}" range-key="{{key}}">
      <view class="picker">
        <view wx:if='{{key!=""}}'>
          {{array[index][key]}}
        </view>
        <view wx:if='{{key==""}}'>{{array[index]}}</view>
        <image class='triggle-close' src='/utils/img/close.png'></image>
      </view>
    </picker>
    <picker mode="date" wx:if='{{isTimePicker}}' value="{{date}}" start="{{startDate}}" end="{{endDate}}" bindchange="changeTime">
      <view class="picker">
        <view>{{date}}</view>
        <image class='triggle-close' src='/utils/img/close.png'></image>
      </view>
    </picker>
  </view>
</view>