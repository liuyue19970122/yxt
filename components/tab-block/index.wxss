/* components/tab-block/index.wxss */
.tab-container{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding:12rpx 24rpx;
}
.tab-container>view{
  width: 32%;  /* calc里面的运算符两边要空格 */
  height:32%;
  margin-right: 2%;
  margin-bottom: 2%;
  font-size:28rpx;
  color:#999;
  border-radius:12rpx;
  box-sizing:border-box;
  padding: 6rpx 0;
}
.tab-container>view{
  flex-grow: 0; /* 子元素按1/n的比例进行拉伸 */
  text-align: center;
}
.tab-container>view:nth-of-type(3n){ /* 选择个数是3的倍数的元素 */
  margin-right: 0;
}
.tab-container>view:nth-of-type(n+7){  /* 选择倒数的三个元素，n可以取0 */
  margin-bottom: 0;
}
.not-active{
   border:2rpx solid #f0f0f0;
}
.active{
  background-color: #fe2200;
  color: #fff !important;
}
