.banner-box{
  height: 500rpx;
}
.swiper-img{
  height: 100%;
  width: 100%;
}
.pro-container{
  margin:0 24rpx; 
}
.pro-name{
  margin: 44rpx 0;
}
.font-title{
  font-size: 32rpx;
  color: #333;
  word-break: break-all;
  overflow:hidden;
  text-overflow:ellipsis; 
  text-overflow: -o-ellipsis-lastline;
  display:-webkit-box;
  -webkit-line-clamp:2;
  line-clamp: 2;
  -webkit-box-orient:vertical;
}
.pro-name>text{
  flex: 1;
  padding-right: 24rpx;
}
.act-container{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 48rpx;
}
.col-container{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999;
  margin-left: 24rpx;
}
.share-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 4rpx;
}
.share-img+.share-img{
  margin-left: 24rpx;
}
.pro-attr{
  padding-bottom: 44rpx;
  border-bottom: 2rpx solid #f0f0f0;
  color: #666;
}
.attr-name{
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.attr-container{
  display: flex;
  justify-content: space-between;
  
}
.sale-price{
  font-size: 32rpx;
  display: inline-block;
  margin-right: 24rpx;
  color: #fe2200;
  font-weight: bold;
}
.normal-price{
  display: inline-block;
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}
.scan-spec{
  font-size: 22rpx;
  border-radius: 50rpx;
  padding: 8rpx 20rpx;
  background: #fe2200;
  color: #fff;
}
.pro-desc{
  margin-bottom: 44rpx;
  padding: 24rpx 0;
  border-top: 2rpx solid #f0f0f0;
}
.pro-blank{
  height: 44rpx;
  background-color: #f0f0f0;
}
.pro-title{
  line-height: 120rpx;
  text-align: center;
}



