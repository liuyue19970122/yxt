/* pages/purchase/address-detail/address-map/map.wxss */
page{
  height: 100%;
  width: 100%;
}
.pro-search{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  background-color: #fe2200;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 100;
}
.location{
  display: flex;
  align-items: center;
  width: 170rpx;
  padding-left:20rpx;
}
.location>image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
}
.picker{
  color: #fff;
  font-size: 36rpx;
}
.location>button{
  color:#fff;
  border-radius:0;
  padding:0;
  margin:0;
  background:#fe2200;
  font-size: 28rpx;
}
.item-title{
   font-size: 28rpx;
}
.picker,location>button{
  overflow:hidden;
  text-overflow:ellipsis; 
  text-overflow: -o-ellipsis-lastline;
  display:-webkit-box;
  -webkit-line-clamp:1;
  line-clamp: 1;
  -webkit-box-orient:vertical;
}
.search{
  flex: 1;
  --text-size:36rpx;
}
.page-container{
  height: 100%;
}
.map-container{
  height: 45%;
  padding-top:108rpx;
  box-sizing: border-box;
}
#map{
  width:100%;
  height: 100%;
  position: relative;
}
.img-map {
	width: 80rpx;
	height: 80rpx;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%); 
}
.suggest{
  height: 55%;
}
.suggest-info{
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.info-title{
  margin-bottom: 12rpx;
  font-size: 36rpx;
  color: #333;
}
.info-address{
  font-size: 28rpx;
  color: #999;
}