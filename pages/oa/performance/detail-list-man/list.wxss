/* pages/oa/performance/detail-list-man/list.wxss */

@import '../detail-list/list'

.total-module {
  height: 100rpx;
  position: fixed;
  bottom: 100rpx;
  left: 0;
  width: 750rpx;
  font-size: 32rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  color: #333;
  background: #f5f5f5;
  align-items: center;
  line-height: 100rpx;
}

.type {
  font-size: 36rpx;
  color: #fe2200;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  color: #fe2200;
}

.dialog {
  padding: 40rpx;
}

.radio-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.choose-type-box {
  border-bottom: 2rpx solid #f1f1f1;
}

.score-box {
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  align-items: center;
}

.score-input {
  width: 186rpx;
  border-bottom: 2rpx solid #707070;
  padding:5rpx;
  text-align: center;
}

.reason{
  height:134rpx;
  padding:20rpx;
  color:#333;
  font-size:32rpx;
  border:2rpx solid #707070;
  box-sizing: border-box;
  width:100%;
}
.list{
  height:calc(100vh - 200rpx);
}