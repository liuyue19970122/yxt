.result-icon{
  width:200rpx;
  height:200rpx;
  border-radius: 50%;
  margin:44rpx 0 40rpx 0;
}

.result-box{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.info-item{
  font-size:32rpx;
  color:#333;
  margin-bottom: 40rpx;
}
.border-bottom{
  height:20rpx;
  width:750rpx;
}
.go-on-btn{
  background: #ff654d;
  margin-top:80rpx;
}
.print-btn{
  background: #fe6600;
}
button::after{
  border-radius: 0;
}
.btn{
  width:240rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  border:0;
  border-radius: 20rpx;
  color:#fff;
  font-size:32rpx;
  margin-bottom:40rpx;
}