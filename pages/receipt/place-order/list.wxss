/* pages/receipt/place-order/list.wxss */
@import '../../../utils/common'
.total-module {
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 36rpx;
  color: #333;
  font-weight: 400;
}
.form{
  padding:0 24rpx 300rpx;
}
.food-list {
  min-height:400rpx;
}

.food-item {
  display: flex;
  padding: 0 24rpx;
  height:100rpx;
  justify-content: space-between;
  align-items:center;
}

.op-count {
  display: flex;
  align-items: center;
}

.food-count {
  font-size: 28rpx;
  margin: 0 20rpx;
  color: #333;
}

.food-price {
  font-size: 30rpx;
  margin-top: 20rpx;
  color: #333;
}

.food-remark {
  font-size: 28rpx;
  /* margin-top: 5rpx; */
  color: #999;
}

.printer-list {
  height: 120rpx;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  position: fixed;
  bottom:100rpx;
  left:0;
  width:750rpx;
  padding-left:40rpx;
  z-index:99
}
.left-item{
  display: flex;
  align-items: center;
}
.food-left{
  display: flex;
  align-items: center;
}
.printer-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  box-shadow: 0 3px 6px #f4d5a7;
}

.printer-item{
  margin-right:60rpx;
}

.food-attr{
  font-size:24rpx;
  margin-left:10rpx;
  color:#333;
}
.food-name{
  margin-left:40rpx;
  font-size:32rpx;
  color:#333;
}
.table-list {
  display: flex;
  align-items: center;
  padding:20rpx 24rpx;
  border:2rpx solid #f5f5f5;
}

.table-item {
  margin-right: 20rpx;
}

.pay-money{
  margin-left:20rpx;
  color:#75c581;
}
.pay-btn {
  background: #75c581;
  padding: 10rpx;
  color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 0 8rpx #ccc;
  font-size:24rpx;
}
