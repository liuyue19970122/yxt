.card-container{
  padding: 0 24rpx;
}
.card{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0 30rpx;
  color: #333;
  border-bottom:2rpx solid #f0f0f0;
}
.card-info{
  flex: 1;
  margin-right: 40rpx;
}
.info-name{
  font-size: 32rpx;
  margin-bottom: 24rpx;
}

.info-other{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}