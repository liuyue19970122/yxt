/* pages/purchase/refund-order/refund-order.wxss */
.content-box{
  margin:0 24rpx;
}
.refund-reason{
  padding:24rpx;
}
.refund-reason textarea{
  height:30rpx;
  padding:20rpx 0;
  font-size:28rpx;
  color:#333;
}
.choose-all{
  padding:24rpx 0;
}
.goods-item {
  display: flex;
  /* justify-content: space-between; */
  font-size: 28rpx;
  color: #333;
  height: 60rpx;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.goods-img, .goods-img image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.goods-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  width: 440rpx;
  height: 100%;
}

.goods-local {
  font-size: 20rpx;
  color: #999;
}

.goods-num {
  width: 89rpx;
  text-align: left;
}

.goods-price {
  width: 89rpx;
  text-align: right;
}

.op-btn-group{
  display: flex;
  flex: 1;
  width: 750rpx;
  position:fixed;
  bottom:0;
  left:0;
}
.op-btn-group button::after{
  border-radius: 0;
}
.op-btn-group button{
  border-radius: 0;
  height:120rpx;
  line-height: 120rpx;
  font-size: 40rpx;
  flex:1;
  border:0;
}
.check-all{
  display: flex;
  justify-content: space-between;
  width:640rpx;
  font-size:32rpx;
  color:#333;
}
.money{
  color:#fe2200;
}
.y-btn {
  /* width: 50%; */
  color: #fff;
  background: #fe2200;
}