/* pages/receipt/vege/default-list/list.wxss */
@import '/utils/asset/css/cus-form.wxss';
page,.content-container{
  width: 100%;
  height: 100%;
  position: relative;
}
.card-container{
  margin:0 24rpx;
  padding: 24rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #f0f0f0;
}
.card-item{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.card-img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 24rpx;
}
.card-info{
  flex: 1;
  margin-left: 20rpx;
}
.info-name{
  color: #333;
  font-size: 28rpx;
}
.info-unit,.info-desc{
  color: #999;
  font-size: 24rpx;
}


