/* pages/finance/statement/income/income.wxss */
.line{
   border-top: 2rpx solid #7d96ff; 
  border-bottom: 2rpx solid #E2E7FC;
}

.form-item{
  padding: 0 24rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  margin: 24rpx 0;
}

.form-item__inline{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}
.form-item__label{
  padding-right: 24rpx;
}

.form-item__content{
  flex: 1;
  text-align: right;
  color: #fe2200;
}
.arrow-down{
  background-color: #fff;
  margin-left: 24rpx;
  width: 24rpx;
  height: 40rpx;
}

.gradient{
  background: linear-gradient(to right,#9ad7f8 0%,#b8c3f9 100%);
  background:-webkit-linear-gradient(to right,#9ad7f8 0%,#b8c3f9 100%);
  background:-ms-linear-gradient(to right,#9ad7f8 0%,#b8c3f9 100%);
  background:-moz-linear-gradient(to right,#9ad7f8 0%,#b8c3f9 100%);
  background:-o-linear-gradient(to right,#9ad7f8 0%,#b8c3f9 100%);
}
